{
  "name": "mutui-hologram-studio",
  "version": "1.0.0",
  "description": "MUT Hologram Studio - Kiosk Photo Booth Application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "node node_modules/vite/bin/vite.js build",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build:python": "scripts\\build-python.bat",
    "setup:ffmpeg": "powershell -ExecutionPolicy Bypass -File scripts/setup-ffmpeg.ps1",
    "setup:python-embedded": "powershell -ExecutionPolicy Bypass -File scripts/setup-python-embedded.ps1",
    "dist": "npm run build && electron-builder --win",
    "dist:full": "npm run build:python && npm run build && electron-builder --win",
    "dist:dir": "npm run build && electron-builder --win --dir",
    "dist:portable": "npm run build && electron-builder --win portable",
    "dist:minimal": "npm run build && electron-builder --win --dir"
  },
  "build": {
    "appId": "com.mut.hologram-studio",
    "productName": "MUT Hologram Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/*.map",
      "!**/*.md",
      "!**/*.txt",
      "!**/*.bak*",
      "!**/test*/**",
      "!**/tests/**",
      "!**/__tests__/**",
      "!**/spec/**",
      "!**/specs/**",
      "!**/docs/**",
      "!**/doc/**",
      "!**/example*/**",
      "!**/pics/**",
      "!**/captures/**",
      "!**/MUT-distribution/**",
      "!**/python/**",
      "!**/scripts/**",
      "!**/*.pyc",
      "!**/__pycache__/**",
      "!**/node_modules/**/{CHANGELOG.md,README.md,readme.md,README,readme}",
      "!**/node_modules/**/{test,tests,__tests__,testing,spec,specs}/**",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/**/{.travis.yml,.eslintrc*,.prettier*,tsconfig.json,jest.config.*}",
      "!**/node_modules/**/example*/**",
      "!**/node_modules/**/doc*/**",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/LICENSE*",
      "!**/node_modules/**/license*",
      "!**/node_modules/**/.github/**",
      "!**/node_modules/**/coverage/**",
      "!**/node_modules/**/.nyc_output/**"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "resources/python",
        "to": "python",
        "filter": [
          "**/*",
          "!**/*.pyc",
          "!**/__pycache__/**",
          "!**/test*/**"
        ]
      },
      {
        "from": "resources/ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "ffmpeg.exe",
          "ffprobe.exe"
        ]
      },
      {
        "from": "frames",
        "to": "frames",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "compression": "maximum"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "dependencies": {
    "@mediapipe/camera_utils": "^0.3.1675466862",
    "@mediapipe/selfie_segmentation": "^0.1.1675465747",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@serialport/parser-byte-length": "^13.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "electron-store": "^8.2.0",
    "framer-motion": "^11.18.2",
    "immer": "^10.2.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serialport": "^13.0.0",
    "tailwind-merge": "^2.6.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron/rebuild": "^4.0.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^4.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.29.0"
  }
}
