{
  "name": "mutui-hologram-studio",
  "version": "1.0.0",
  "description": "MUT Hologram Studio - Kiosk Photo Booth Application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "node node_modules/vite/bin/vite.js build",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build:python": "scripts\\build-python.bat",
    "dist": "npm run build && electron-builder --win",
    "dist:full": "npm run build:python && npm run build && electron-builder --win",
    "dist:dir": "npm run build && electron-builder --win --dir"
  },
  "build": {
    "appId": "com.mut.hologram-studio",
    "productName": "MUT Hologram Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@serialport/parser-byte-length": "^13.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "framer-motion": "^11.18.2",
    "immer": "^10.2.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serialport": "^13.0.0",
    "tailwind-merge": "^2.6.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron/rebuild": "^4.0.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-vite": "^4.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0"
  }
}
